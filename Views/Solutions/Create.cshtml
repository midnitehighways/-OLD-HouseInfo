                @Html.ValidationMessageFor(model => model.decisionTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.targetSchedule, htmlAttributes: new { @class = "control-label col-md-2" })
